<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <com.haibin.calendarview.CalendarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:calendar_show_mode="only_month_view">

        <com.haibin.calendarview.CalendarView
            app:month_view="com.example.administrator.myapplication.CustomMonthView"
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            app:calendar_height="50dp"
            app:current_day_lunar_text_color="#ff6633"
            app:current_day_text_color="#333333"
            app:current_month_lunar_text_color="#ff6633"
            app:current_month_text_color="#333333"
            app:min_year="2004"
            app:month_view_show_mode="mode_only_current"
            app:other_month_text_color="#e1e1e1"
            app:month_view_scrollable="false"
            app:week_view_scrollable="false"
            app:scheme_text_color="#333"
            app:scheme_theme_color="#333"
            app:selected_lunar_text_color="#fff"
            app:selected_text_color="#fff"
            app:selected_theme_color="#ff6633"
            app:week_background="#fff"
            app:week_start_with="mon"
            app:week_text_color="#111" />
    </com.haibin.calendarview.CalendarLayout>
</RelativeLayout>