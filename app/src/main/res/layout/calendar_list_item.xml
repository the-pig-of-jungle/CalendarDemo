<?xml version="1.0" encoding="utf-8"?>


<com.haibin.calendarview.CalendarLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f6f6f6"
    app:calendar_show_mode="only_month_view"
    tools:showIn="@layout/activity_main">
    <TextView
        android:id="@+id/month_label"
        android:paddingLeft="15dp"
        android:textSize="14sp"
        android:textColor="#222222"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:background="#f6f6f6"
        />
    <com.haibin.calendarview.CalendarView
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        app:month_view="com.example.administrator.myapplication.CustomMonthView"
        android:id="@+id/calendarView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:calendar_height="50dp"
        app:week_bar_height="0dp"
        app:current_day_lunar_text_color="#ff6633"
        app:current_day_text_color="#333333"
        app:current_month_lunar_text_color="#ff6633"
        app:current_month_text_color="#333333"
        app:min_year="2004"
        app:month_view_show_mode="mode_only_current"
        app:other_month_text_color="#e1e1e1"
        app:month_view_scrollable="true"
        app:week_view_scrollable="true"
        app:scheme_text_color="#333"
        app:scheme_theme_color="#333"
        app:selected_lunar_text_color="#fff"
        app:selected_text_color="#fff"
        app:selected_theme_color="#ff6633"
        app:week_background="#fff"
        app:week_start_with="sun"
        app:week_text_color="#111" />
</com.haibin.calendarview.CalendarLayout>